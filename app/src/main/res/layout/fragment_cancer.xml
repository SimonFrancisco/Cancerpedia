<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
   <data>
      <variable
          name="cancerViewModel"
          type="com.example.cancerpedia.cancerscreens.CancerViewModel" />
   </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context=".cancerscreens.CancerFragment"
       android:background="@color/purple">
      <ImageView
          android:id="@+id/cancer_logo"
          android:layout_width="0dp"
          android:layout_height="150dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="30dp"
          android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/logo_png"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/cancer_list"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:padding="12dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/cancer_logo">

      </androidx.recyclerview.widget.RecyclerView>

   </androidx.constraintlayout.widget.ConstraintLayout>


</layout>