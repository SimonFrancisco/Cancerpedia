<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="cancer"
            type="com.example.cancerpedia.database.Cancer" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/purple">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/cancerLayout">
        <ImageView
            android:id="@+id/cancer_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            tools:srcCompat="@drawable/cancer"/>
        <TextView
            android:id="@+id/cancer_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="19dp"
            android:layout_below="@id/cancer_image"
            android:text="@string/cancer_text"
            android:textSize="24sp"
            android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>